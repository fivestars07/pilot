@using Microsoft.AspNetCore.Authentication

@{ 
    ViewData["Title"] = "Claims Page";
}

<h2>HttpContext.User.Claims</h2>

<dl>
    @foreach(var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>


<h2>HttpContext.User.Identity</h2>
<dl>
    <dt>@User.Identity.AuthenticationType</dt>
    <dd>@User.Identity.IsAuthenticated</dd>
    <dd>@User.Identity.Name</dd>
</dl>


<h2>AuthenticationProperties</h2>

<dl>
    @foreach(var prop in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <dt>@prop.Key</dt>
        <dd>@prop.Value</dd>
    }
</dl>



